# Application
APP_NAME={{ config.name }}
DEBUG=false
PORT=8000

# Security (REQUIRED - generate secure keys)
SECRET_KEY=your-super-secret-key-here-change-this
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

{% if config.db == "postgres" %}
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/{{ config.name }}_dev
{% elif config.db == "sqlite" %}
DATABASE_URL=sqlite:///./{{ config.name }}_dev.db
{% endif %}

{% if config.queue == "redis" or config.queue == "rq" %}
# Redis
REDIS_URL=redis://localhost:6379/0
{% endif %}

{% if config.auth %}
# JWT Authentication (REQUIRED - generate secure keys)  
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
REFRESH_TOKEN_EXPIRATION_DAYS=30
{% endif %}

{% if config.telemetry %}
# Telemetry
TELEMETRY_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME={{ config.name }}
{% endif %}

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

